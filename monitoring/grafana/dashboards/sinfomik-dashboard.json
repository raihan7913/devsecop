{
  "dashboard": {
    "title": "Sinfomik - Docker Monitoring",
    "tags": ["sinfomik", "docker"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Container Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "container_last_seen{name=\"sinfomik-app\"}",
            "refId": "A"
          }
        ]
      },
      {
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=\"sinfomik-app\"}[5m]) * 100",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=\"sinfomik-app\"} / 1024 / 1024",
            "legendFormat": "Memory (MB)",
            "refId": "A"
          }
        ]
      },
      {
        "title": "Network Traffic",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{name=\"sinfomik-app\"}[5m])",
            "legendFormat": "RX",
            "refId": "A"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{name=\"sinfomik-app\"}[5m])",
            "legendFormat": "TX",
            "refId": "B"
          }
        ]
      },
      {
        "title": "Disk I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(container_fs_reads_bytes_total{name=\"sinfomik-app\"}[5m])",
            "legendFormat": "Read",
            "refId": "A"
          },
          {
            "expr": "rate(container_fs_writes_bytes_total{name=\"sinfomik-app\"}[5m])",
            "legendFormat": "Write",
            "refId": "B"
          }
        ]
      }
    ],
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s"
  }
}
